        endforeach()
        set(NCBI_PTB_CALLBACK_COLLECTED TRUE)
        foreach(_prj IN LISTS NCBI_PTB_ALLOWED_PROJECTS)
            if (NCBI_VERBOSE_ALLPROJECTS OR NCBI_VERBOSE_PROJECT_${_prj})
