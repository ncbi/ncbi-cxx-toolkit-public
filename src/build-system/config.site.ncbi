    *MAC       ) ;;
    *          ) : ${LIBXML_PATH=$NCBI/libxml-2.7.8} ;;
esac

: ${LIBXLSXWRITER_PATH=$NCBI/libxlsxwriter-0.6.9}

: ${LMDB_PATH=$NCBI/lmdb-0.9.24}

