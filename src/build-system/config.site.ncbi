# : ${ZORBA_PATH=$NCBI/zorba-2.2.0}

for x in `set | grep '^[A-Z0-9_]*_PATH=' | fgrep "_PATH=${NCBI-/nonexistent}/"`
do
    d=`echo "$x" | cut -d= -f2`
    if test \! -d "$d"; then
        eval unset "`echo "$x" | cut -d= -f1`"
    fi
done

try_local

case "$ncbi_platform" in
    *MAC ) unset -f test ;;
esac
