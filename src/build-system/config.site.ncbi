    *MAC       ) : ${FREETYPE_PATH=/opt/X11} ;;
esac

: ${FTDS_PATH:="/netopt/Sybase/clients-mssql/current"}

case "$ncbi_platform" in
    FreeBSD64  ) : ${FTGL_PATH=$NCBI/ftgl-2.1.3-rc5-ncbi2} ;;
    *          ) : ${FTGL_PATH=$NCBI/ftgl-2.1.3-rc5}       ;;
esac

