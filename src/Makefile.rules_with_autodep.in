#  auto-dependencies build rules for GNU make
#################################


###  C/C++ compilation
include $(builddir)/Makefile.rules


### Dependencies (GNU make only)
DEPFLAGS_ALL = $(DEPFLAGS) $(LOCAL_CPPFLAGS) $(CPPFLAGS)
%.d: ./%.cpp
	$(CXX) $(DEPFLAGS_ALL) $< | sed 's%$*@obj_ext@ *:%$*@obj_ext@ $@ :%g' > $@ 
%.d: $(srcdir)/%.cpp
	$(CXX) $(DEPFLAGS_ALL) $< | sed 's%$*@obj_ext@ *:%$*@obj_ext@ $@ :%g' > $@ 
%.d: ./%.c
	$(CC)  $(DEPFLAGS_ALL) $< | sed 's%$*@obj_ext@ *:%$*@obj_ext@ $@ :%g' > $@ 
%.d: $(srcdir)/%.c
	$(CC)  $(DEPFLAGS_ALL) $< | sed 's%$*@obj_ext@ *:%$*@obj_ext@ $@ :%g' > $@ 


ifeq ($(MAKECMDGOALS),clean)
DONT_INCLUDE = 1
endif
ifeq ($(MAKECMDGOALS),purge)
DONT_INCLUDE = 1
endif
ifeq ($(MAKECMDGOALS),requirements)
DONT_INCLUDE = 1
endif

ifndef DONT_INCLUDE
include $(SOURCES:=.d)
endif
