# Must be used this way:
#
# srcdir = @srcdir@
# include @builddir@/Makefile.mk
#
# LIBOBJ  = p1_lib1 p1_lib2 
# LIB     = libp1
# OBJ     = p1_obj1
# SUBPROJ = app sub_proj1 sub_proj2
# .....
# CXXFLAGS = -g $(ORIG_CXXFLAGS) -D_DEBUG -DXYZ_P1_PROJECT
# .....
# include @builddir@/Makefile.lib
#################################


### Add prefixes and extentions
XLIBOBJ = $(LIBOBJ:=@obj_ext@)
XOBJ    = $(OBJ:=@obj_ext@)
XLIB    = $(XLIB:=@lib_ext@)


### C/C++ source file compilation rules

%.@obj_ext@: $(srcdir)/%.cpp
	$(CXX) @f_compile@ $(CXXFLAGS) $(CPPFLAGS) $< @f_outobj@ $@
%.@obj_ext@: $(srcdir)/%.c
	$(CC)  @f_compile@ $(CFLAGS)   $(CPPFLAGS) $< @f_outobj@ $@


### The library build rule

$(XLIB): $(XLIBOBJ)
	$(AR) $(XLIB) $(XLIBOBJ)
	-$(RANLIB) $(XLIB)


### Standard targets(non-recursive)

all: $(XLIB) $(XOBJ)

install: all
	$(COPY) $(XLIB) $(XOBJ) $(libdir)/

clean:
	-$(RMDIR) SunWS_cache
	-$(RM) .make.state
	-$(RM) $(XLIBOBJ)
	-$(RM) $(XLIB)
	-$(RM) $(XOBJ)
	-$(RM) *~


### Standard targets
### Recursive build -- in the $(SUBPROJ) directories

all_r: all
	@if ! -z "$(SUBPROJ)" ; then \
		for i in $(SUBPROJ) ; do \
			( cd $$i ; $(MAKE) $(MFLAGS) $@ ) ; \
		done ; \
	fi

install_r: install
	@if ! -z "$(SUBPROJ)" ; then \
		for i in $(SUBPROJ) ; do \
			( cd $$i ; $(MAKE) $(MFLAGS) $@ ) ; \
		done ; \
	fi

clean_r: clean
	@if ! -z "$(SUBPROJ)" ; then \
		for i in $(SUBPROJ) ; do \
			( cd $$i ; $(MAKE) $(MFLAGS) $@ ) ; \
		done ; \
	fi

