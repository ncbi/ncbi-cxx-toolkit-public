# $Id$

# Master (top-level) makefile for all NCBI C++ projects
##################################################################

include ./Makefile.mk


#################################
#  Standard meta-makefile
#################################


MANDATORY_PROJ  = corelib util connect cgi html hello

OPTIONAL_PROJ   = @serial@ @dbapi@ @objects@ @app@ \
   $(OPT_GROUPS) @check@
X_OPTIONAL_PROJ =  serial   dbapi   objects   app  \
   ctools gui internal check

SUB_PROJ = $(MANDATORY_PROJ) $(OPTIONAL_PROJ)
include ./Makefile.meta




#################################
#  Special rules
#################################


#
# Prepare for install:   get rid of everything not needed for the install
#

strip_for_install:
	rm -rf $(MANDATORY_PROJ) $(X_OPTIONAL_PROJ) Makefile
