# This can be used to build/install/clean
# a single(sic!) application [APP] using [OBJ, LIB]
#
# srcdir = @srcdir@
# include @builddir@/Makefile.mk
#
# APP = my_app
# OBJ = my_main my_obj1 my_obj2
# LIB = foo bar
# DLL = foo1 bar1
# .....
# CXXFLAGS = -g $(ORIG_CXXFLAGS) -D_DEBUG -DXYZ_MY_APP
# .....
# include @builddir@/Makefile.app
#################################


### C/C++ source file compilation (and maybe auto-dependencies) build rules

CXXFLAGS_ALL = @f_compile@ $(CXXFLAGS) $(LOCAL_CPPFLAGS) $(CPPFLAGS)
CFLAGS_ALL   = @f_compile@ $(CFLAGS) $(LOCAL_CPPFLAGS) $(CPPFLAGS)
SOURCES      = $(OBJ)
include $(builddir)/Makefile.$(Rules)


### Library dependencies

%.lib_dep: $(libdir)/@lib_pre@%@lib_ext@
	@touch $@
%.dll_dep: $(libdir)/@lib_pre@%@dll_ext@
	@touch $@


### Standard application build rules

XAPP = $(APP)@exe_ext@
XOBJ = $(OBJ:=@obj_ext@)
XLIB = @f_libpath@$(libdir) \
   $(LIB:%=@lib_l_pre@%@lib_l_ext@) \
   $(DLL:%=@lib_l_pre@%@dll_l_ext@)
XLIBDEP = $(LIB:=.lib_dep) $(DLL:=.dll_dep)

$(XAPP): $(XOBJ) $(XLIBDEP)
	$(LINK) $(LDFLAGS) $(XOBJ) $(PRE_LIBS) $(XLIB) $(LIBS) @f_outexe@$(XAPP)
	@$(STRIP) $(XAPP)
	$(BINCOPY) $(XAPP) $(bindir)/$(XAPP)


### Standard targets(non-recursive)

all: $(XAPP)

clean:
	-$(RMDIR) SunWS_cache
	-$(RMDIR) ii_files
	-$(RM) .make.state
	-$(RM) *@obj_ext@
	-$(RM) $(XAPP)
	-$(RM) *~
	-$(RM) *.dep
	-$(RM) core

purge: clean
	-$(RM) $(bindir)/$(XAPP)
