@echo off
echo ******************************************************************************
echo Running -CONFIGURE- please wait
echo ******************************************************************************
@echo on
"%PTB_EXE%" -dll -cfg -logfile "%SLN_PATH%_configuration_log.txt" -conffile "%TREE_ROOT%\src\build-system\project_tree_builder.ini" "%TREE_ROOT%" %PTB_PROJECT% "%SLN_PATH%"
@echo off
if errorlevel 1 goto report_error

echo ******************************************************************************
echo -CONFIGURE- has succeeded
echo Configuration log was saved at "file://%SLN_PATH%_configuration_log.txt"
echo ******************************************************************************
exit /b 0

:report_error
echo ******************************************************************************
echo -CONFIGURE- has failed
echo Configuration log was saved at "file://%SLN_PATH%_configuration_log.txt"
echo ******************************************************************************
start "" "%SLN_PATH%_configuration_log.txt"
exit /b 1

